<script>
$(document).ready(function(){
    $("#subscribers")
        .tablesorter({widthFixed: true, widgets: ['zebra']})
        .tablesorterPager({container: $("#pager")});
});

</script>

<table id="subscribers" class="table-bordered ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
    </tr>
</thead>
<tbody>

<% @subscribers.each do |subscriber| %>
  <tr>
    <td><%= link_to subscriber.full_name, subscriber %></td>
    <td><%= link_to subscriber.email, subscriber %></td>
    <td><%= subscriber.address %></td>
    <td><%= subscriber.city %></td>
    <td><%= subscriber.state %></td>
    <td><%= subscriber.zip %></td>
  </tr>
<% end %>
</tbody>
</table>

<div id="pager">
  <form>
    <!-- <span class="first">‹ First</span> -->
    <span class="prev">‹ Prev</span>
    <input type="text" class="pagedisplay">
    <span class="next">Next ›</span>
    <!-- <img src="../addons/pager/icons/last.png" class="last"> -->
    <select class="pagesize">
      <option selected="selected" value="10">10</option>
      <option value="20">20</option>
      <option value="30">30</option>
      <option value="40">40</option>
    </select>
  </form>
</div>

<%= link_to "New Subscriber", new_subscriber_path, :class => 'nice small radius button' %>
