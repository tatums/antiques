<%= content_tag(:tr, contact) do %>
  <td><%= link_to contact.full_name, contact %></td>
  <td><%= link_to contact.email, contact %></td>
  <td><%= contact.address %></td>
  <td><%= contact.city %></td>
  <td><%= contact.state %></td>
  <td><%= contact.zip %></td>
  <td class="delete center">
    <%= link_to 'X', remove_contact_from_group_path(@group, contact), confirm: 'Are you sure?', method: :delete %>
  </td>
<% end %>