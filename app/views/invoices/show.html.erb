<p id="notice"><%= notice %></p>

<div customer>
  <%= @invoice.subscriber.name_and_address.html_safe %>
</div>

<p>
  <b>Title:</b>
  <%= @invoice.title %>
</p>

<table>
  <thead>
    <tr>
      <td></td>
      <td>Item</td>
      <td>Description</td>
      <td>Dimensions</td>
      <td>Qty</td>
      <td>Price</td>
      <td>Tax</td>
      <td>Total</td>
    </tr>
  </thead>
  <tfoot>
    <%= form_for([@invoice, LineItem.new], :remote => true, :html => {:class=> "nice"}) do |f| %>
      <tr>
        <td></td>
        <td><%= f.text_field :item_number, :class => "ex-small input-text", :placeholder => "item" %></td>
        <td><%= f.text_field :description, :class => "small input-text", :placeholder => "description" %></td>
        <td><%= f.text_field :dimensions, :class => "small input-text", :placeholder => "dimensions" %></td>
        <td><%= f.text_field :quantity, :class => "ex-small input-text", :placeholder => "qty" %></td>
        <td><%= f.text_field :price, :class => "ex-small input-text", :placeholder => "price" %></td>
        <td><%= f.text_field :tax, :class => "ex-small input-text", :placeholder => "tax" %></td>
        <td><%= f.submit 'Create', :class => "nice small radius button" %></td>
      </tr>
    <% end %>
  </tfoot>
  <tbody class="line_items">
    <%= render @invoice.line_items %>
  </tbody>
</table>

<table class="totals">
  <tr>
    <td>Subtotal</td><td class="sub_total currency"><%= number_to_currency(@invoice.subtotal) %></td>
  </tr>
  <tr>
    <td>Tax</td><td class="tax currency"><%= number_to_currency(@invoice.tax) %></td>
  </tr>
  <tr>
    <td>Grand Total</td><td class="grand_total currency"><%= number_to_currency(@invoice.calc_grand_total) %></td>
  </tr>
</table>


