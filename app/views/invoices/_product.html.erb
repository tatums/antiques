<% @products.each do |product| %>

<%= content_tag(:div, product, :id => "product_#{product.id}", :class => 'row') do %>
  <div class="span1">
    <p>
      <%= image_tag (product.image_url(:thumb_50) ) if product.image? %>
    </p>
  </div>
  <div class="span3">
    <p>
      <%= button_to "Add #{product.title}", invoice_add_product_path(@invoice, :product_id => product.id), :remote => true, :class => 'add-inv-product' %>

    </p>
  </div>
<% end %>
<% end %>