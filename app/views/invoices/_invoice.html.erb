<tr>
  <td><%= link_to invoice.inv_number, invoice %></td>
  <td><%= link_to invoice.inv_date, invoice %></td>
  <td><%= link_to invoice.title, invoice %></td>
  <td class="currency"><%= link_to number_to_currency(invoice.calc_sub_total), invoice %></td>
  <td class="currency"><%= link_to number_to_currency(invoice.calc_grand_total), invoice %></td>
  <td>
    <% if invoice.subscriber %>
      <%= link_to invoice.subscriber.full_name, invoice.subscriber %>
    <% end %>
  </td>
  <td class="delete center">
    <%= link_to 'X', invoice, confirm: 'Are you sure?', method: :delete %>
  </td>
</tr>
