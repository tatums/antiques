<%= form_for(@invoice, :url => setup_invoice_path(params[:product_id]), :html =>{:class => 'nice'}) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>
      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :inv_date, :class=> "input-text datepicker", :placeholder => "Date MM/DD/YYYY" %>
  </div>
  <div class="field">
    <%= f.text_field :title, :class=> "large input-text", :placeholder => "Title" %>
  </div>
  <div class="field">
    <%= f.label :subscriber_id, "Customer" %><br />
    <%= f.select("subscriber_id", Subscriber.all.collect {|s| [ s.full_name, s.id ] }, :class=> "large input-text")%>
  </div>
  <div class="actions">
    <%= f.submit "Create", :class => "nice small radius button" %>
  </div>
<% end %>
