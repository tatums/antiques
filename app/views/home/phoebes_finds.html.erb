<% if user_signed_in? %>

	<script language="javascript">
		$(document).ready(function(){
			$('#products').sortable({
				update: function(event, ui) {
					var ProductsOrder = $(this).sortable('toArray');
					$.post( 'products/sort', {ProductsOrder:ProductsOrder});
				}
			});
		});
	</script>
<% end %>

<% if user_signed_in? %>

<%= link_to 'Back', admin_path, :class => "back" %>
  <h1 class="status">Products</h1>
<% end %>

<p id="page_headline">PHOEBE'S FINDS</p>

<ul id="products">
  <% if @products.count > 0 %>

  	<% @products.each do |product| %>
  		<%= render product%>
  	<% end %>

  <% else %>

    <li>
    	<h2>Sorry</h2>
    	<p>We are working on the site.  Please check back soon.</p>
    	<p>If you would like to be emailed once we have content available. Click <%= link_to 'here', subscribe_path %></p>
    </li>

  <% end %>
</ul>

<% if user_signed_in? %>
	<%= link_to 'New Product', new_product_path %>
<% end %>
