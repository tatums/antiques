<h2>Search</h2>

<%= form_tag search_path, :method => :get do %>
  <%= text_field_tag :query, params[:query] %> <%= submit_tag "Search!" %>
<% end %>

<%if @results%>
  <ul id="search-results">
    <% @results.each do |result| %>
      <li><%=link_to result.title, result %></li>
    <% end %>  
  </ul>
<% end %>

