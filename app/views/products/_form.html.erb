<%= form_for(@product,:html => {:id => 'image-upload', :class => 'nice' }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="edit-product-container">
    <div class="edit-product-left">
    
      <div class="inline_checkbox_field edit-product">
        <%= f.check_box :active %>
        <%= f.label :active %>
      </div>
  
      <div class="field">
        <%= image_tag(@product.image_url(:thumb_100)) if @product.image? %><br />
        <%= f.label :image, "Featured Image" %><br />
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
      <div class="field">
        <%= f.check_box :phoebe_find %>
        <%= f.label :phoebe_find %>
      </div>
      <% Category.active.order(:position).each do |category| %>
        <div class="field">
          <%= check_box_tag "product[category_ids][]", category.id, @product_categories.include?(category.id) %>
    	    <%= category.title.capitalize %>
        </div>
      <% end %>
    </div>
  
  
    <div class="edit-product-right">
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, :class=> "oversize input-text" %>
      </div>
      <div class="field">
        <%= f.label :country %><br />
        <%= f.text_field :country, :class=> "input-text"  %>
      </div>
      <div class="field">
        <%= f.label :period %><br />
        <%= f.text_field :period, :class=> "small input-text"  %>
      </div>
      <div class="field">
        <%= f.label :dimensions %><br />
        <%= f.text_field :dimensions, :class=> "small input-text"  %>
      </div>

      <div class="field">
        <%= f.label :price %><br />
        <%= f.text_field :price, :class=> "small input-text"  %>
      </div>
  
    <div class="field">
      <%= f.label :body, "Description" %><br />  
      <%= f.text_area :body %>
    </div>
  </div>

    <div class="actions">
      <%= f.submit 'Save', :class => "nice small radius button" %>
    </div>
  </div>
  
<% end %>


