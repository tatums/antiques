<%= form_for(@product,:html => {:id => 'image-upload' }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="edit-product-container">
    <div class="edit-product-left">
    
      <div class="inline_checkbox_field edit-product">
        <%= f.check_box :active %>
        <%= f.label :active %>
      </div>
  
      <div class="field edit-product">
        <%= image_tag(@product.image_url(:thumb_100)) if @product.image? %><br />
        <%= f.label :image, "Featured Image" %><br />
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
        <div class="field edit-product">
          <%= f.check_box :phoebe_find %>
          <%= f.label :phoebe_find %>
        </div>
        <% Category.active.order(:position).each do |category| %>
          <div class="field edit-product">
            <%= check_box_tag "product[category_ids][]", category.id, @product_categories.include?(category.id) %>
      	    <%= category.title.capitalize %>
          </div>
        <% end %>
    </div>
  
  
    <div class="edit-product-right">
      <div class="field edit-product">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field edit-product">
        <%= f.label :country %><br />
        <%= f.text_field :country %>
      </div>
      <div class="field edit-product">
        <%= f.label :period %><br />
        <%= f.text_field :period %>
      </div>
      <div class="field dimensions edit-product">
        <%= f.label :height, "H" %>
        <%= f.text_field :height %>
        <%= f.label :width, "W" %>
        <%= f.text_field :width %>
        <%= f.label :depth, "D" %>
        <%= f.text_field :depth %> -
        <%= f.label :diameter, "Dia" %>
        <%= f.text_field :diameter %>
      </div>

      <div class="field edit-product">
        <%= f.label :price %><br />
        <%= f.text_field :price %>
      </div>
  
    <div class="field edit-product">
      <%= f.text_area :body %>
    </div>
  </div>

    <div class="actions">
      <%= f.submit 'Save' %>
    </div>
  </div>
  
<% end %>


