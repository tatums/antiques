= form_for(@category, :html=> {:class=> 'nice'}) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :title, :class=> "input-text", :placeholder => "Title"
  .field
    = f.check_box :active
    = f.label :active
  .actions
    = f.submit 'Save' ,:class => "nice small radius button"
